<div class="bg-success text-center py-2">
    <h1 class="text-white mb-0">Pracownicy Leasingowi</h1>
</div>

<nav class="navbar navbar-expand-lg navbar-dark bg-success custom-navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="https://zre.com.pl">HOME</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <% if (isAuthenticated) { 
                    if (isAdmin) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= path === '/card-list' ? 'active' : '' %>" href="/card-list">Karty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= path === '/operator-list' ? 'active' : '' %>" href="/operator-list">Operatorzy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= path === '/machine-list' ? 'active' : '' %>" href="/machine-list">Czytniki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= path === '/account-list' ? 'active' : '' %>" href="/account-list">Konta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= path === '/company-list' ? 'active' : '' %>" href="/company-list">Firmy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= path === '/area-list' ? 'active' : '' %>" href="/area-list">Obszary</a>
                        </li>
                    <% } %>
                <li class="nav-item">
                    <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/">Pracownicy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= path === '/events-count' ? 'active' : '' %>" href="/events-count">Zdarzenia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= path === '/worksheets-spa' ? 'active' : '' %>" href="/worksheets-spa">Karty pracy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= path === '/worksheet-report' ? 'active' : '' %>" href="/worksheet-report">Raporty</a>
                </li>
                <% if (isAuthenticated && isAdmin) { %>
                    <li class="nav-item">
                        <a class="nav-link <%= path === '/logs-list' ? 'active' : '' %>" href="/logs-list">Logi operatorów</a>
                    </li>
                <% } %>
                <% } %>
            </ul>
            <ul class="navbar-nav">
                <% if (!isAuthenticated) { %>
                    <li class="nav-item">
                        <a class="nav-link <%= path === '/login' ? 'active' : '' %>" href="/login">Zaloguj</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <form action="/logout" method="post">
                            <button class="btn btn-outline-light custom-logout-btn" type="submit">Wyloguj</button>
                        </form>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<style>
    .custom-navbar .nav-link {
        color: white !important;
        transition: color 0.3s ease;
    }

    .custom-navbar .nav-link:hover,
    .custom-navbar .nav-link:focus {
        color: #3d3a3a !important;
    }

    .custom-navbar .nav-link.active {
        color: #da7575 !important;
        font-weight: bold;
    }

    .custom-logout-btn:hover {
        background-color: rgba(255, 255, 255, 0.1) !important;
    }

    /* Dodane style dla nagłówka */
    h1 {
        font-size: 1.8rem;
        margin: 0;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>
