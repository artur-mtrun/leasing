<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Default Title' %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-4 col-lg-3">
                <form action="/edit-operator/<%= operator.operator_id %>" method="POST">
                    <div class="mb-3">
                        <label for="login" class="form-label">Login</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            name="login" 
                            id="login" 
                            value="<%= operator.login %>" 
                            required
                        >
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Nowe hasło (zostaw puste, aby nie zmieniać)</label>
                        <input 
                            type="password" 
                            class="form-control" 
                            name="password" 
                            id="password"
                        >
                    </div>
                    <div class="mb-3">
                        <label for="area_id" class="form-label">Obszar</label>
                        <select class="form-control" name="area_id" id="area_id" required>
                            <% areas.forEach(area => { %>
                                <option 
                                    value="<%= area.area_id %>" 
                                    <%= operator.area_id === area.area_id ? 'selected' : '' %>
                                >
                                    <%= area.descript %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3 form-check">
                        <input 
                            type="checkbox" 
                            class="form-check-input" 
                            name="is_admin" 
                            id="is_admin" 
                            value="true"
                            <%= operator.is_admin ? 'checked' : '' %>
                        >
                        <label class="form-check-label" for="is_admin">Jest adminem</label>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button class="btn btn-success" type="submit">Zapisz zmiany</button>
                        <a href="/operator-list" class="btn btn-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %> 